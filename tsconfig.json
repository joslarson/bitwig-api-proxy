{
    "compilerOptions": {
        "target": "es3",
        "module": "es2015",
        "sourceMap": false,
        "declaration": true,
        "rootDir": "src",
        "baseUrl": "./src",
        "moduleResolution": "node",
        "outDir": "./dist/lib",
        "importHelpers": true
    },
    "compileOnSave": false,
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules/**/*",
        "dist"
    ]
}
